android_unit_test(
    name = "android_library_sample_unit_test",
    srcs = glob([
        "src/test/java/**/*.kt",
    ]),
    associates = [
        ":android_library_sample_kt",
    ],
    deps = [
        ":android_library_sample",
        "@maven//:junit_junit",
        "@maven//:org_json_json",
    ],
